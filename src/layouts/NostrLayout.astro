---
import NostrHeader from "../components/NostrHeader.astro";
import NostrFooter from "../components/NostrFooter.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage = "/shaka.png" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#2C2A3D" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="da_DK" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Favicon -->
    <link rel="icon" href="/shaka.png" type="image/png" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Nostr.dk",
        "url": "https://nostr.dk",
        "description": "Dansk ressource om Nostr-protokollen â€“ den censurresistente, decentraliserede protokol for sociale medier og meget mere.",
        "inLanguage": "da-DK",
        "publisher": {
          "@type": "Organization",
          "name": "Nostr.dk",
          "url": "https://nostr.dk",
          "email": "nostr@nostr.dk"
        }
      }
    </script>

    <!-- Umami Analytics -->
    <script defer src="https://cloud.umami.is/script.js" data-website-id="1acc3339-0f4e-4bed-8c62-4e734c34aa13"></script>
  </head>

  <body>
    <NostrHeader />
    <main class="container">
      <slot />
    </main>
    <NostrFooter />
  </body>
</html>