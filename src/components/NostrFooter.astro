  <script>
    async function fetchBlockHeight() {
      try {
        const response = await fetch('https://mempool.space/api/blocks/tip/height');
        if (!response.ok) throw new Error('Failed to fetch block height');
        const blockHeight = await response.json();
        const element = document.getElementById('block-height');
        if (element) element.textContent = blockHeight;
      } catch (error) {
        console.error(error);
        const element = document.getElementById('block-height');
        if (element) element.textContent = 'Error loading data';
      }
    }
  
    window.addEventListener('load', fetchBlockHeight);
    setInterval(fetchBlockHeight, 60000);
  </script>