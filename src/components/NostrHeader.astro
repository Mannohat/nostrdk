---
// Nostr.dk Header
---

<header>
  <div class="logo-container">
    <a href="/" class="logo-link">
      <img src="/shaka.png" alt="Nostr Logo" id="logo" />
      <span class="logo-text">NOSTR.DK</span>
    </a>
  </div>
  
  <nav>
    <ul>
      <li><a href="/">Hjem</a></li>
      <li><a href="/#nostr-ressourcer">Ressourcer</a></li>
      <li><a href="/#nostr-nip05">Nostr Adresse</a></li>
      <li><a href="/podcasts">Podcasts</a></li>
      <li><a href="/apps">Apps & Tjenester</a></li>
      <li><a href="/#nostr-om">Om</a></li>
      <li><a href="/#nostr-support">Support</a></li>
    </ul>
  </nav>

  <div class="burger-menu" id="burger-menu" aria-expanded="false">
    <div></div>
    <div></div>
    <div></div>
  </div>
</header>

<div class="mobile-menu" id="mobile-menu" aria-hidden="true">
  <a href="/">Hjem</a>
  <a href="/#nostr-ressourcer">Ressourcer</a>
  <a href="/#nostr-nip05">Nostr Adresse</a>
  <a href="/#nostr-om">Om</a>
  <a href="/podcasts">Podcasts</a>
  <a href="/apps">Apps & Tjenester</a>
</div>

<style>
header {
  background: #2C2A3D;
  color: #FFF;
  padding: 20px 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1000;
}

.logo-container {
  display: flex;
  align-items: center;
}

.logo-link {
  display: flex;
  align-items: center;
  gap: 10px;
  text-decoration: none;
  transition: opacity 0.3s;
}

.logo-link:hover {
  opacity: 0.8;
}

.logo-container img {
  height: 40px;
  transition: transform 0.5s ease;
}

.logo-text {
  font-size: 32px;
  font-weight: 700;
  color: #FFF;
}

nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  gap: 25px;
}

nav ul li a {
  color: #FFF;
  font-size: 16px;
  font-weight: 600;
  transition: color 0.3s;
}

nav ul li a:hover {
  color: #A084CA;
}

.burger-menu {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 30px;
  height: 20px;
  cursor: pointer;
}

.burger-menu div {
  background-color: #FFF;
  height: 3px;
  width: 100%;
  transition: all 0.3s;
}

.mobile-menu {
  display: none;
  flex-direction: column;
  position: fixed;
  top: 70px;
  right: 0;
  background-color: #2C2A3D;
  width: 100%;
  text-align: center;
  padding: 20px;
  z-index: 1000;
}

.mobile-menu a {
  padding: 10px;
  color: #FFF;
  font-size: 18px;
  border-bottom: 1px solid #444;
}

.mobile-menu.active {
  display: flex;
}

@media (max-width: 768px) {
  nav {
    display: none;
  }
  
  .burger-menu {
    display: flex;
  }
}
</style>

<script>
  // Mobile menu toggle
  const burgerMenu = document.getElementById('burger-menu');
  const mobileMenu = document.getElementById('mobile-menu');

  if (burgerMenu && mobileMenu) {
    burgerMenu.addEventListener('click', () => {
      const expanded = burgerMenu.getAttribute('aria-expanded') === 'true';
      burgerMenu.setAttribute('aria-expanded', !expanded);
      mobileMenu.setAttribute('aria-hidden', expanded);
      mobileMenu.classList.toggle('active');
    });
  }

  // Smooth scrolling for anchor links
  function setupSmoothScroll() {
    const headerHeight = 80;
    
    document.querySelectorAll('a[href^="/#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        
        // Check if we're on homepage
        if (window.location.pathname === '/') {
          e.preventDefault();
          const targetId = href.substring(2); // Remove "/#"
          
          if (targetId === 'top') {
            window.scrollTo({ top: 0, behavior: 'smooth' });
          } else {
            const targetElement = document.getElementById(targetId);
            if (targetElement) {
              const offset = targetElement.getBoundingClientRect().top + window.scrollY - headerHeight;
              window.scrollTo({ top: offset, behavior: 'smooth' });
              
              // Close mobile menu if open
              if (mobileMenu && mobileMenu.classList.contains('active')) {
                mobileMenu.classList.remove('active');
                burgerMenu.setAttribute('aria-expanded', 'false');
              }
            }
          }
        }
        // If not on homepage, let the link work normally to navigate there
      });
    });
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', setupSmoothScroll);
  
  // Also run after navigation (for SPAs, though Astro does full page loads)
  document.addEventListener('astro:page-load', setupSmoothScroll);
</script>